#!/bin/sh

wgetcount=`which wget 2>/dev/null | wc -w`
if test ! $wgetcount = 1; then
  echo "Utility wget not found in your PATH."
  exit -1
fi

echo " "
echo "Running script for downloading the GAMS I/O libraries for Darwin platform"
echo " "

FILES="DARciolib_ver035LIB.zip DARclicelib_ver014LIB.zip DARgclib_ver015LIB.zip DARg2ddll_ver016LIB.zip DARg2dlib_ver016LIB.zip DARgdxio_ver234LIB.zip DARsmaglib_ver004LIB.zip"

mkdir -p DAR
cd DAR
rm -f $FILES

echo "Downloading the libraries from www.gams.com..."
for file in $FILES
do
	wget http://www.gams.com/~svigerske/$file
done

echo "Unpacking the libraries..."
for file in $FILES
do
	unzip -o $file
done

echo "Deleting the zip files..."
rm -f $FILES

echo " "
echo "Done downloading the GAMS I/O libraries."
echo " "
